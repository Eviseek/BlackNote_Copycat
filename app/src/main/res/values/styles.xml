<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainBackgroundColor</item>
        <item name="colorPrimaryDark">@color/mainBackgroundColor</item>
        <item name="android:textColorPrimary">@color/mainTextColor</item>
        <item name="colorAccent">@color/mainTextColor</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:background">@color/mainBackgroundColor</item>
    </style>

</resources>
